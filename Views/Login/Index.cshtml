        </div>
        <div class="col-md-8 col-sm-6"></div>
        <div class="col-md-1 col-sm-2 p-1" style="float:right">
            <button type="button" class="btn btn-outline-primary " style="width:100%" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
        </div>

        <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="loginModalLabel">Login</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="loginEmail" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="loginEmail">
                            </div>
                            <div class="mb-3">
                                <label for="loginPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="loginPassword">
                            </div>
                            <div class="row justify-content-center">
                                <button type="submit" class="col-md-8 btn btn-primary">Login</button>
                            </div>
                            <div class="row p-2 ">
                                <p class=" text-center">New to FindJob ? <a href="" data-bs-target="#registerModal" data-bs-toggle="modal" data-bs-dismiss="modal">Register Now</a>  </p>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1 col-sm-2 p-1" style="float:right">
            <button type="button" class="btn btn-outline-light text-primary" style="width:100%" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
        </div>
        <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="registerModalLabel">Register</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="registerEmail" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="registerEmail">
                            </div>
                            <div class="mb-3">
                                <label for="registerPassword" class="form-label">Password (6 or more characters)</label>
                                <input type="password" class="form-control" id="registerPassword">
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="registerType" id="registerType1" value="recruiter">
                                    <label class="form-check-label" for="registerType1">Recruiter</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="registerType" id="registerType2" value="candidate">
                                    <label class="form-check-label" for="registerType2">Job Seeker</label>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <a href="@Url.Action("UpsertProfile", "Candidate") " class="col-md-8 btn btn-primary">Register</a>
                                @*<button type="submit" class="col-md-8 btn btn-primary" onclick="Register()">Register</button>*@
                            </div>
                            <div class="row p-2 ">
                                <p class=" text-center">Already on FindJob ? <a href="" data-bs-target="#loginModal" data-bs-toggle="modal" data-bs-dismiss="modal">Login</a>  </p>
                            </div>

                        </form>
                    </div>
